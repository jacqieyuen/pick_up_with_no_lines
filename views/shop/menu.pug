extends ../layouts/layout

block main
  include ../partials/main_nav_bar.pug
  include ../partials/menu_filter_nav_bar.pug
  #inventoryBox.container-fluid
    each k in category
      div#categorySeperator
        h2#categoryInMenu= k
        p#categoryDescription Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      .row
        each item in inventory
          if item.category == k
            .col-xs-12.col-sm-6.col-md-4.col-lg-4.col-xl-4
              .thumbnail(class= item.category)
                img.img-responsive(src=item.imagePath, alt='...')
                .caption
                  h3= item.title
                  p.description= item.description
                  div.clearfix
                    div.price.pull-left= "$ "+item.price
                    a.btn.btn-default.pull-right(href='#', role='button') Add
